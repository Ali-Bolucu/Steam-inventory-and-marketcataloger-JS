{
  "manifest_version": 3,

  "name": "ortilency",
  "description": "steam launch from orti",
  "version": "1.0.0",
  "author": "Ali Bölücü",
  "icons": { "128": "icon_128.png" },
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "My custom google Extension"
  },
  "permissions": ["activeTab"],

  "optional_permissions": ["storage"],

  "host_permissions": [
    "*://steamcommunity.com/*",
    "*://*.steampowered.com/*",
    "https://store.steampowered.com/account/history/",
    "https://store.steampowered.com/account/AjaxLoadMoreHistory/*"
  ]
}
